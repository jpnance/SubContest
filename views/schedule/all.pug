extends ../layout.pug

block title
	+title('Week ' + week, 'Schedule')

block content
	div.row
		div.col-12.pb-3
			+scheduleNav(parseInt(week) - 1, parseInt(week), parseInt(week) + 1)

		if games.length == 0
			h5.col-8.offset-2.text-center There are no games scheduled for Week #{week}.
		else
			each game in games
				+gameCard(game)
